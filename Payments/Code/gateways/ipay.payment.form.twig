
{# empty Twig template #}
{% import "form.macro.twig" as forms %}

{% set web_base = constant('WEB_BASE') %}

{% set tmparray = {'live': '1'} %}
{% set tmparray = tmparray|merge({'mm': get_setting('ipay_payments_mobile_payment')|default('1')}) %}
{% set tmparray = tmparray|merge({'mb': get_setting('ipay_payments_mobile_payment')|default('0')}) %}
{% set tmparray = tmparray|merge({'dc': get_setting('ipay_payments_debit_card')|default('0')}) %}
{% set tmparray = tmparray|merge({'cc': get_setting('ipay_payments_credit_card')|default('0')}) %}
{% set tmparray = tmparray|merge({'mer': get_setting('ipay_payments_vendor_title')}) %}
{% set tmparray = tmparray|merge({'oid':  payment.id }) %}
{% set tmparray = tmparray|merge({'inv':  payment.id }) %}
{% set tmparray = tmparray|merge({'ttl': gateway.total_amount|round(0, 'ceil') }) %}
{% set tmparray = tmparray|merge({'tel': user.phone|default('020232323')|replace({' ': "", '-': ""}) }) %}
{% set tmparray = tmparray|merge({'eml': user.email }) %}
{% set tmparray = tmparray|merge({'vid': get_setting('ipay_payments_vendor_ref')}) %}
{% set tmparray = tmparray|merge({'cur': get_setting('ipay_payments_vendor_currency')}) %}
{% set tmparray = tmparray|merge({'p1': 'mpesa'}) %}
{% set tmparray = tmparray|merge({'p2': ''}) %}
{% set tmparray = tmparray|merge({'p3': ''}) %}
{% set tmparray = tmparray|merge({'p4': ''}) %}
{% set tmparray = tmparray|merge({'cbk':  web_base ~'/ipay/payments/notify' }) %}
{% set tmparray = tmparray|merge({'cst': '1'}) %}
{% set tmparray = tmparray|merge({'crl': '0'}) %}


{% set datastring = tmparray|join() %}
{% set hashkey = get_setting('ipay_payments_vendor_hashcode') %}
{% set hashid = hash_hmac('sha1', datastring, hashkey) %}

{% set tmparray = tmparray|merge({'hsh': hashid}) %}
{% set tmparray = tmparray|merge({'cbk': tmparray.cbk|url_encode }) %}

{% set url = '' %}
{% for key,param in tmparray %}
    {% if key %}
        {% set url =url ~ '&' ~ key ~ '=' ~ param %}
    {% else %}
        {% set url = url ~ key ~ '=' ~ param %}
    {% endif %}
{% endfor %}

{% set url = url|join() %}

